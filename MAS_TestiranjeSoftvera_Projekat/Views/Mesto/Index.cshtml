@model IEnumerable<MAS_TestiranjeSoftvera_Projekat.Domain.Mesto>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj mesto</a>
</p>
<table class="table" id="tabelaMesta">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PttBroj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojStanovnika)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td id="naziv">
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td id="pttBroj">
                @Html.DisplayFor(modelItem => item.PttBroj)
            </td>
            <td id="brojStanovnika">
                @Html.DisplayFor(modelItem => item.BrojStanovnika)
            </td>
        
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.MestoId">Izmeni</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MestoId">Obrisi</a>

            </td>
        </tr>
}
    </tbody>
</table>

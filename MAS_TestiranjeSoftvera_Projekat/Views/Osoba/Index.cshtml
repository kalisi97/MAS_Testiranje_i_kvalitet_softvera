@model IEnumerable<MAS_TestiranjeSoftvera_Projekat.Domain.Osoba>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj osobu</a>
    <a asp-action="Index" asp-route-expect="18" class="btn btn-success">Punoletne osobe</a>
</p>
@if (Model.Count() == 0)
{
   <p>Jos uvek nije uneta nijedna osoba!</p>
}
else
{
<table class="table" id="tabelaOsoba">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaticniBroj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tezina)
            </th>
            <th>
                Oci
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
               Datum rodjenja
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Napomena)
            </th>
            <th>
                Mesto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.MaticniBroj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tezina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BojaOciju)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRodjenja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Napomena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesto.Naziv)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.OsobaId">Izmeni</a>
             </td>
            <td>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.OsobaId">Obrisi</a>

            </td>
        </tr>
}
    </tbody>
</table>
}